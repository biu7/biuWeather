<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#fff"
    android:padding="15dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_day1_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨天"
            android:textSize="20sp"

            />
        <ImageView
            android:id="@+id/iv_weather1_week"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_weather_sun"
            android:layout_weight="0.16" />
        <TextView
            android:id="@+id/tv_temp1_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="25°/20°"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_day2_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textSize="20sp"

            />
        <ImageView
            android:id="@+id/iv_weather2_week"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_weather_sun"
            android:layout_weight="0.16" />
        <TextView
            android:id="@+id/tv_temp2_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="25°/20°"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_day3_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明天"
            android:textSize="20sp"

            />
        <ImageView
            android:id="@+id/iv_weather3_week"
